{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react",
        "outDir": "public/js",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext"
        ]
    },
    "include": [
        "src/index.tsx"
    ]
}